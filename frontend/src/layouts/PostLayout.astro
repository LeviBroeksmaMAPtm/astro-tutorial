---
import Icon from "astro-icon";
import Layout from "../layouts/Layout.astro";
import Tag from "../components/Tag.astro";
const { frontmatter } = Astro.props;
// const allPosts = await Astro.glob("../pages/posts/*.md");
// const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<Layout pageTitle={"Blog - " + frontmatter.title}>
  <div class="z-0 box-border h-full max-w-5xl flex-1 bg-slate-100 px-8 py-6">
    <div class="mb-4">
      <div class="mb-4">
        <div class="relative mb-4 overflow-hidden rounded-lg">
          <img
            client:visible
            src={frontmatter.image.url}
            class="w-full"
            alt={frontmatter.image.alt}
          />
          <div class="absolute bottom-2 right-2 flex gap-2">
            {frontmatter.tags.map((tag) => <Tag tag={tag} />)}
          </div>
        </div>
        <h1 class="mb-0">{frontmatter.title}</h1>
        <small class="italic text-slate-500"
          >Published on: {frontmatter.pubDate}</small
        >
      </div>
      <div class="flex flex-col italic text-slate-500">
        <div class="flex gap-2">
          <Icon name="ic:baseline-account-circle" class="w-6" />
          <p>Written by {frontmatter.author}</p>
        </div>
      </div>
    </div>
    <slot />
  </div>
</Layout>
