---
const { name, url, id } = Astro.props;
interface Props {
  name: string;
  url: string;
  id: string;
}
---

<div
  class="hover:bg-cerulean-500 group relative flex items-center justify-center rounded-md transition-all duration-500 ease-in-out hover:bg-opacity-50 sm:hover:bg-transparent"
>
  <a
    href={url}
    class="text-cerulean-500 hover:text-cerulean-600 dark:text-mirage-200 my-1 w-full text-center text-sm font-medium capitalize tracking-wider sm:text-lg"
    id={id}>{name}</a
  >
  <div
    class="bg-cerulean-500 absolute top-8 hidden w-1/2 p-px sm:group-hover:block"
  >
  </div>
</div>
